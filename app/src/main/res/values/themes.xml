<resources>
    <!-- Base application theme. -->
    <style name="Theme.AniFox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
        <item name="colorPrimary">@color/cloud</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="materialAlertDialogTheme">@style/Dialog.MaterialDialog</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ArrowImageView">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:tint">@color/morePage</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView.Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Header</item>
    </style>

    <style name="TextView.HeaderRecovery">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.HeaderRecover</item>
    </style>

    <style name="TextView.HeaderBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.HeaderBack</item>
    </style>

    <style name="TextView.Warning">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Warning</item>
    </style>

    <style name="TextView.DetailsHeader">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.DetailsHeader</item>
    </style>

    <style name="TextView.Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Description</item>
    </style>

    <style name="TextView.DetailsTypes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.DetailsTypes</item>
    </style>

    <style name="TextView.HeaderLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.HeaderLogin</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Secondary</item>
    </style>

    <style name="TextView.Ranking">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textAppearance">@style/Text.Secondary</item>
    </style>

    <style name="TextView.SmallerLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.SmallerLogin</item>
    </style>

    <style name="TextView.CasualLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.CasualLogin</item>
    </style>

    <style name="TextView.Smaller">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Smaller</item>
    </style>

    <style name="TextView.Smallest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Smallest</item>
    </style>

    <style name="TextView.MorePage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Smallest</item>
    </style>

    <style name="TextView.Card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Card</item>
    </style>

    <style name="TextView.CardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.CardDescription</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="LogoTextview" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textSize">64sp</item>
        <item name="android:shadowDy">6</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:shadowRadius">5</item>
    </style>
</resources>